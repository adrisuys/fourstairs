<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="10dp"
    android:background="@drawable/table">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/poplar"
            android:textColor="#000"
            android:text="NEW GAME"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/new_game_super_easy"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/poplar"
            android:textColor="#7D9CE4"
            android:text="PLAY SUPER EASY"/>

        <View
            android:layout_width="170dp"
            android:layout_height="2dp"
            android:background="#7D9CE4"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/new_game_easy"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/poplar"
            android:textColor="#5A85E6"
            android:text="PLAY EASY"/>

        <View
            android:layout_width="105dp"
            android:layout_height="2dp"
            android:background="#5A85E6"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/new_game_avg"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/poplar"
            android:textColor="#255AD5"
            android:text="PLAY AVERAGE"/>

        <View
            android:layout_width="145dp"
            android:layout_height="2dp"
            android:background="#255AD5"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/new_game_hard"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/poplar"
            android:textColor="#082466"
            android:text="PLAY HARD"/>

        <View
            android:layout_width="105dp"
            android:layout_height="2dp"
            android:background="#082466"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/back"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/poplar"
            android:textColor="#880034"
            android:text="CANCEL"/>

        <View
            android:layout_width="75dp"
            android:layout_height="2dp"
            android:background="#9C0844"
            android:layout_marginBottom="30dp"/>

</LinearLayout>