<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#CAD6F1"
    android:weightSum="12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="right">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/badges"
            android:onClick="seeBadges"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_info_black_24dp"
            android:onClick="seeInfo"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_settings_black_24dp"
            android:onClick="seeSettings"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/poplar"
            android:textColor="#7D9CE4"
            android:onClick="newGame"
            android:text="CLASSIC GAME"/>

        <View
            android:layout_width="140dp"
            android:layout_height="2dp"
            android:background="#7D9CE4"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:tag="2"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/poplar"
            android:textColor="#5A85E6"
            android:onClick="newChallenge"
            android:text="CHALLENGES"/>

        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="#5A85E6"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:background="@drawable/table"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="#000"
                android:fontFamily="@font/poplar"
                android:text="HIGHSCORES"/>

            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="12"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/poplar"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:text="SUPER EASY : "/>

                <TextView
                    android:id="@+id/hs_super_easy"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poplar"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:text="10"/>

            </LinearLayout>

            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="12"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/poplar"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:text="EASY : "/>

                <TextView
                    android:id="@+id/hs_easy"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poplar"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:text="10"/>

            </LinearLayout>

            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="12"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:fontFamily="@font/poplar"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:text="AVERAGE : "/>

                <TextView
                    android:id="@+id/hs_avg"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:fontFamily="@font/poplar"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:text="10"/>

            </LinearLayout>

            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="12"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:fontFamily="@font/poplar"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="DIFFICULT : "/>

                <TextView
                    android:id="@+id/hs_difficult"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:fontFamily="@font/poplar"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="10"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>